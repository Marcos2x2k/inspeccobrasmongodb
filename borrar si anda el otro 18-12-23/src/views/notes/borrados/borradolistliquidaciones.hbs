<script>
    function alertaborrar() {
        var mensaje;
        var opcion = confirm("Click en Borrar o Cancelar");
        if (opcion == true) {
            mensaje = "Elemento Borrado";
        } else {
            mensaje = "Cancelado";
        }
        document.getElementById("ejemplo").innerHTML = mensaje;
    }

    function buttonrecuperartodos() {
        document.getElementById("recuperartodosprop").disabled = true;
        document.getElementById("recuperartodosprof").disabled = true;
        document.getElementById("recargartodos").style.visibility = "hidden";
    }

</script>

