    <div class="form-group btn-center mx-auto">
        <form action="/notes/findintimacion" method="POST">
            <input type="search" class="form-control" name="boletaintnum" placeholder="Buscar x Boleta Intimación..."
                autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar x Boleta
                </button>
            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/notes/findexpedienteintimacion" method="POST">
            <input type="search" class="form-control" name="numexpedienteint" placeholder="Buscar x Expediente..."
                autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Expediente
                </button>
            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/notes/findadremaintim" method="POST">
            <input type="search" class="form-control" name="adrema" placeholder="Buscar x Adrema..." autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Adrema
                </button>
            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/notes/findinspectorintim" method="POST">
            <input type="search" class="form-control" name="inspectorint" placeholder="Buscar x Inspector..."
                autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Inspector
                </button>
            </div>
        </form>
    </div>
    <br /><br />
    <a href="/intimaciones/add" class="btn btn-success btn-block">Cargar Nueva Intimacion!</a>
    <br /><br />
    {{#each intimacions}}
    <div class="text-dark col-md-3">
        <br />
        <div class="card">

            <div class="card-body">

                <p style="color:brown; font-style:oblique; font-weight: bold;"
                    class=" display-5 card-title d-flex justify-content-between align-items-center">
                    Boleta Intimación Nº:</p>
                <p style="color:black; font-style:oblique; font-weight: bold;">{{ boletaintnum }}
                </p>
                <p style="color:brown; font-style:oblique; font-weight: bold;"
                    class=" display-5 card-title d-flex justify-content-between align-items-center">
                    Señor/Señora:</p>
                <p style="color:black; font-style:oblique; font-weight: bold;">{{ senorsenora }}
                </p>
                <p style="color:brown; font-style:oblique; font-weight: bold;"
                    class=" display-5 card-title d-flex justify-content-between align-items-center">
                    Fecha Intimación:</p>
                <p style="color:black; font-style:oblique; font-weight: bold;">{{ fechaintimacion }}
                </p>
                <p style="color:brown; font-style:oblique; font-weight: bold;"
                    class="display-5 card-title d-flex justify-content-between align-items-center">
                    Numº Expediente:</p>
                <p style="color:black; font-style:oblique; font-weight: bold;">{{ numexpedienteint }}
                </p>


                <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/intimaciones/edit/{{_id}}"><i
                            class="fas fa-edit" style='font-size:24px;color:rgb(98, 98, 100)'></i></a> Editar </p>

                <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/intimaciones/list/{{_id}}"><i
                            class="fas fa-list" style='font-size:24px;color:blue'></i></a> Info Completa</p>
                <form onSubmit="return confirm('Desea Borrar?')" style="box-shadow: 3px 4px;" action="/intimaciones/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Borrar
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="mx-auto">
        <br /> <br />
        <div class="card mx-auto">
            <div class="card-body">
                <p class"lead" style="color:red; font-weight: bold;"> No existen Intimaciones Aun...</p>
                {{!-- <a href="/notes/add" class="btn btn-success btn-block">Cargar Inspección!</a> --}}
            </div>
        </div>
    </div>
    {{/each}}
</div>