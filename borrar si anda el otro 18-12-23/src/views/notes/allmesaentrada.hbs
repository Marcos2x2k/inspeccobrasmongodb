<div class="row">
    <br /><br />
    <div class="form-group btn-center mx-auto">
        <form action="/mesaentrada/findsector" method="POST">
            <input type="search" class="form-control" name="sector" placeholder="Buscar x Sector..." autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Sector Involucrado
                </button>

            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/mesaentrada/findiniciador" method="POST">
            <input type="search" class="form-control" name="nomyape" placeholder="Buscar x NyApellido..." autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Iniciador
                </button>

            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/mesaentrada/finddni" method="POST">
            <input type="search" class="form-control" name="dni" placeholder="Buscar x DNI..." autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar DNI
                </button>

            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/mesaentrada/findexpediente" method="POST">
            <input type="search" class="form-control" name="numexpediente" placeholder="Buscar x Expediente..."
                autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Expediente
                </button>

            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/mesaentrada/findfechaentrada" method="POST">
            <input type="search" class="form-control" name="fechaingreso" placeholder="Buscar x Fecha..." autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Fecha
                </button>

            </div>
        </form>
    </div>
    <a href="/mesaentradas/add" class="btn btn-success btn-block">Agregar Turno!</a>
    <br />
    {{#each mesaentradas}}
    <div class="text-dark col-md-3">
        <br />
        <div class="card">
            <div class="card-body">
                <p style="color:rgb(15, 14, 14); font-style:oblique; font-weight: bold;"
                    class="text-dark display-5 card-title d-flex justify-content-between align-items-center">
                    Sector Involucrado:</p>
                <p style="color:brown; font-style:oblique; font-weight: bold;">{{ sector }}
                </p>
                <p style="color:rgb(15, 14, 14); font-style:oblique; font-weight: bold;"
                    class="text-dark display-5 card-title d-flex justify-content-between align-items-center">
                    Nombre y Apellido:</p>
                <p style="color:brown; font-style:oblique; font-weight: bold;">{{ nomyape }}
                </p>
                <p style="color:rgb(15, 14, 14); font-style:oblique; font-weight: bold;"
                    class="text-dark display-5 card-title d-flex justify-content-between align-items-center">
                    D.N.I.:</p>
                <p style="color:brown; font-style:oblique; font-weight: bold;">{{ dni }}
                </p>
                <p style="color:rgb(15, 14, 14); font-style:oblique; font-weight: bold;"
                    class="text-dark display-5 card-title d-flex justify-content-between align-items-center">
                    Contacto:</p>
                <p style="color:brown; font-style:oblique; font-weight: bold;">{{ contacto }}
                </p>
                {{!-- <p style="color:rgb(15, 14, 14); font-style:oblique; font-weight: bold;"
                    class="text-dark display-5 card-title d-flex justify-content-between align-items-center">
                    Numº Expediente:</p>
                <p style="color:brown; font-style:oblique; font-weight: bold;">{{ numexpediente }}
                </p> --}}
                <p style="color:rgb(15, 14, 14); font-style:oblique; font-weight: bold;"
                    class="text-dark display-5 card-title d-flex justify-content-between align-items-center">
                    Fecha Ingreso:</p>
                <p type="date" style="color:brown; font-style:oblique; font-weight: bold;">{{ fechaingreso }}
                </p>
                <p style="color:rgb(15, 14, 14); font-style:oblique; font-weight: bold;"
                    class="text-dark display-5 card-title d-flex justify-content-between align-items-center">
                    Hora Ingreso:</p>
                <p style="color:brown; font-style:oblique; font-weight: bold;">{{ horaingreso }}
                </p>
                <p style="color:rgb(15, 14, 14); font-style:oblique; font-weight: bold;"
                    class="text-dark display-5 card-title d-flex justify-content-between align-items-center">
                    Turno Nº:</p>
                <p style="color:brown; font-style:oblique; font-weight: bold;">{{ numturno }}
                </p>
                <br />
                {{!-- <p style="color:brown; font-style:oblique; font-weight: bold;"><a {{!--href="/notes/edit/{{_id}}"
                        --}} {{!--><i class="fas fa-edit" style='font-size:24px;color:rgb(98, 98, 100)'></i></a> Editar
                </p> --}}
                <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/mesaentrada/edit/{{_id}}"><i
                            class="fas fa-edit" style='font-size:24px;color:rgb(98, 98, 100)'></i></a> Editar </p>

                <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/mesaentrada/list/{{_id}}"><i
                            class="fas fa-list" style='font-size:24px;color:blue'></i></a> Info Suplementaria</p>

                <form onSubmit="return confirm('Desea enviar Papelera?')"  style="box-shadow: 3px 4px;" action="/mesaentrada/marcadelete/{{_id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Borrar
                    </button>
                </form>
                {{!-- {{/if}}
            </div>
        </div>
    </div>
    {{else}}
    <div class="mx-auto">
        <br /> <br />
        <div class="card mx-auto">
            <div class="card-body">
                <p class"lead" style="color:red; font-weight: bold;"> No existen Turnos Aun...</p>
                {{!-- <a href="/notes/add" class="btn btn-success btn-block">Cargar Inspección!</a> --}}
            </div>
        </div>
    </div>
    {{/each}}
</div>