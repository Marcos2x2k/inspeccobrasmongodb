<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="car-header mx-auto">
            <h3 style="color:blue; text-decoration:underline">Nueva Estadistica {{user.name}}</h3>
        </div>
        <div class="card-body">
            <form action="/notes/newestadisticas" method="POST">  
            <div class="form-group">  
                    Estadistica Nº:                 
                    <input type="text" name="estadisticanum" class="form-control" 
                    placeholder="Estadistica Nº" autofocus>                    
                </div>              
                <div class="form-group">  
                    Fecha Estadística:                 
                    <input type="date" name="fechaestadistica" class="form-control" 
                    placeholder="Fecha Estadistica" autofocus>                    
                </div>
                <div class="form-group">
                    Hora Estadística:
                    <input type="text" name="horaestadistica" class="form-control"
                    placeholder="Hora Estadistica" ></input>
                </div>
                             
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>                    
                </div>
                <div class="form-group">
                    <p style="color:blue; font-style:oblique; font-weight: bold;"><a href="/estadisticas"><i class="fas fa-list" style='font-size:24px;color:black'></i></a> Volver</p> 
                </div>
            </form>
        </div>
    </div>
</div>
