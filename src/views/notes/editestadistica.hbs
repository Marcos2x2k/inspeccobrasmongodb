<div class="col-md-7 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Estadistica</h3>
        </div>
        <div class="card-body">
            <form action="/notes/editestadistica/{{estadistica._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
            <div class="card-body ">
                <div class="form-group">
                    Estadistica Nº:
                    <input type="text" name="estadisticanum" class="form-control" placeholder="No Posee Info"
                        value="{{estadistica.estadisticanum}}">
                </div>
                <div class="form-group">
                    Fecha Estadistica:
                    <input type="text" name="fechaestadistica" class="form-control" placeholder="No Posee Info"
                        value="{{estadistica.fechaestadistica}}">
                </div>
                <div class="form-group">
                    Hora Estadistica
                    <input type="text" name="horaestadistica" class="form-control" placeholder="No Posee Info"
                        value="{{estadistica.horaestadistica}}">
                </div>
                <div class="form-group">
                    Usuario. Cargó Estadistica
                    <input type="text" name="name" class="form-control" placeholder="name"
                        value="{{estadistica.name}}" disabled>
                </div>
                <div class="form-group"><s></s>
                    <button class="btn btn-primary btn-block" type="submit">
                        Grabar
                    </button>
                </div>
                <div class="form-group">
                    <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/estadisticas"><i class="fas fa-list" style='font-size:24px;color:blue'></i></a> Volver</p> 
                    {{!-- <button class="btn btn-primary btn-block" href="/notes">
                        Volver
                    </button> --}}
                </div>
            </form>
        </div>
    </div>
</div>