<script>
    function alertaborrar() {
        var mensaje;
        var opcion = confirm("Click en Borrar o Cancelar");
        if (opcion == true) {
            mensaje = "Elemento Borrado";
        } else {
            mensaje = "Cancelado";
        }
        document.getElementById("ejemplo").innerHTML = mensaje;
    }

    function selecdatoestadistico() {
        var seleccion = document.getElementById('datoestadistico');
        var x = document.getElementById("armarestadistica")
        var p = document.getElementById("propietario")
        var a = document.getElementById("adrema") 
        var na = document.getElementById("numacta")
        var fd = document.getElementById("desde")     
        var fa = document.getElementById("hasta") 
        if (seleccion.selectedIndex == 0) {
            x.disabled = true;
            p.disabled = true;
            a.disabled = true;
            na.disabled = true;
            fd.disabled = true;
            fa.disabled = true;
        }   
        if (seleccion.selectedIndex == 1) {
            x.disabled = false;
            p.disabled = false;
            a.disabled = true;
            na.disabled = true;
            fd.disabled = true;
            fa.disabled = true;
        } else if (seleccion.selectedIndex == 2) {
            x.disabled = false;
            p.disabled = true;
            a.disabled = false;
            na.disabled = true;
            fd.disabled = true;
            fa.disabled = true;
        } else if (seleccion.selectedIndex == 3) {
            x.disabled = false;
            p.disabled = true;
            a.disabled = true;
            na.disabled = false;
            fd.disabled = true;
            fa.disabled = true;
        } else if (seleccion.selectedIndex == 4) {
            x.disabled = true;
            p.disabled = true;
            a.disabled = true;
            na.disabled = true;
            fd.disabled = false;
            fa.disabled = false;
        }
    }
</script>

