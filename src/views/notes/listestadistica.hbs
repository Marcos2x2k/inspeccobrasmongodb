<div class="col-md-7 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Datos de Estadistica</h3>
        </div>
        <div class="card-body">
            <form action="/notes/editestadistica/{{estadistica._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    Estadistica Nº:
                    <input type="text" name="numinspeccion" class="form-control" placeholder="Sin Información"
                        value="{{estadistica.estadisticanum}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Fecha Estadistica:
                    <input type="text" name="expediente" class="form-control" placeholder="Sin Información"
                        value="{{estadistica.fechaestadistica}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Hora estadistica:
                    <textarea name="horainfraccion" class="form-control"
                        style="color: #3d0ee7; font-weight: bold;" disabled>{{estadistica.horaestadistica}}</textarea>
                </div>
                <div class="form-group">
                    Usuario. Cargó Estadistica
                    <input type="text" name="name" class="form-control" placeholder="Sin Información"
                        value="{{estadistica.name}}" style="color: red;"  disabled>
                </div>

                <div class="form-group">
                    <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/estadisticas"><i class="fas fa-list" style='font-size:24px;color:blue'></i></a> Volver</p>
                </div>
            </form>
        </div>
    </div>
</div>