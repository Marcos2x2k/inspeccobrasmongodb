<div class="col-md-7 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Datos de Infraccion</h3>
        </div>
        <div class="card-body">
            <form action="/notes/editinfraccion/{{infraccion._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    Acta Infraccion Nº:
                    <input type="text" name="numinspeccion" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.actainfnum}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Fecha de Infraccion:
                    <input type="text" name="expediente" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.fechainfraccion}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Hora de Infracción:
                    <textarea name="horainfraccion" class="form-control"
                        style="color: #3d0ee7; font-weight: bold;" disabled>{{infraccion.horainfraccion}}</textarea>
                </div>
                <div class="form-group">
                    Nº de Expediente:
                    <input type="text" name="numexpedienteinf" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.numexpedienteinf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Adrema:
                    <input type="text" name="adremainf" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.adremainf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Propietario (AyN):
                    <input type="text" name="apellidonombrepropietarioinf" class="form-control"
                        placeholder="Sin Información" value="{{infraccion.apellidonombrepropietarioinf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Domicilio Propietario:
                    <input type="text" name="domiciliopropietarioinf" class="form-control"
                        placeholder="Sin Información" value="{{infraccion.domiciliopropietarioinf}}" style="color: #3d0ee7; font-weight: bold;" disabled></input>
                </div>
                <div class="form-group">
                    D.N.I. Propietario:
                    <input type="text" name="dnipropietarioinf" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.dnipropietarioinf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Cuil/Cuit Propietario:
                    <input type="text" name="cuilpropietarioinf" class="form-control"
                        placeholder="Sin Información" value="{{infraccion.cuilpropietarioinf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Lugar de Constitución:
                    <input type="text" name="lugardeconstitucioninf" class="form-control"
                        placeholder="Sin Información" value="{{infraccion.lugardeconstitucioninf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                
                <div class="form-group">
                    Causas:
                    <input type="text" name="causasinf" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.causasinf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Ordenanza Número:
                    <input type="text" name="ordenanzanum" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.vencimientoint}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Notificado Infracción:
                    <textarea type="text" name="notificadoinf" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.notificadoinf}}" style="color: #3d0ee7; font-weight: bold;" disabled></textarea>
                </div>
                <div class="form-group">
                    Inciso Número:
                    <input type="text" name="incisonum" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.incisonum}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Observación:
                    <input type="text" name="observacion" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.observacion}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Testigo (AyN):
                    <input type="text" name="apellidonombretestigoinf" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.apellidonombretestigoinf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Inspector (AyN):
                    <input type="text" name="inspectorinf" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.inspectorinf}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Código Inspector:
                    <input type="text" name="apellidonombretestigoinf" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.inspectorcod}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Detalle General:
                    <input type="text" name="detallegeneral" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.detallegeneral}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Informe de inspeccion Nº:
                    <input type="text" name="informeinspecnum" class="form-control" placeholder="ISin Información"
                        value="{{infraccion.informeinspecnum}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>
                <div class="form-group">
                    Informe de Inspección - Observaciones:
                    <input type="text" name="inforinspecobsevaciones" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.inforinspecobsevaciones}}" style="color: #3d0ee7; font-weight: bold;" disabled>
                </div>

                {{!-- <img src="{{infraccion.fotoinf}}" width="200" /> <br /><br /> --}}

                <div class="form-group">
                    ID Usuario. Cargó Infracción
                    <input type="text" name="fechapasea" class="form-control" placeholder="Sin Información"
                        value="{{infraccion.user}}" style="color: red;"  disabled>
                </div>

                <div class="form-group">
                    <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/infracciones"><i class="fas fa-list" style='font-size:24px;color:blue'></i></a> Volver</p>
                </div>
            </form>
        </div>
    </div>
</div>