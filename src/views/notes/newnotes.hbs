<div class="col-md-8 mx-auto">
    <div class="card">
        <div class="car-header mx-auto">
            <br />
            <h3 style="color:blue; text-decoration:underline; font-weight: bold;">Nueva Inspección</h3>
        </div>
        <div class="card-body">
            <p style="color:red">(*) Obligatorio</p>
            <form action="/notes/newnotes" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <p>Origen de Inspección:
                        <select name="origeninspeccion">
                            <option>--Sin Selección --</option>
                            <option>Correo Electrónico</option>
                            <option>Nota</option>
                            <option>Administración</option>
                            <option>Denuncia 0800</option>
                            <option>Dir.Gral.Recup. y Fizc.Espac.Público</option>
                            <option>dirección Auditoria y fiscalización</option>
                        </select>
                    </p>
                </div>
                <div class="form-group">
                    (*) Nº Inspeccion:
                    <input type="text" name="numinspeccion" class="form-control" placeholder="Num. Inspección"
                        required autofocus>
                </div>
                <div class="form-group">
                    (*) Fecha(Actual):
                    <input name="date" class="form-control" placeholder="dd/mm/aaaa" type="date"></input>
                </div>
                <div class="form-group">
                    Expediente:
                    <input type="text" name="expediente" class="form-control" placeholder="No Posee" autofocus>
                </div>
                <div class="form-group">
                    oficio:
                    <input type="text" name="oficio" class="form-control" placeholder="No Posee" autofocus>
                </div>
                <div class="form-group">
                    acta:
                    <input type="text" name="acta" class="form-control" placeholder="No Posee" autofocus>
                </div>
                <div class="form-group">
                    Adrema:
                    <input name="adrema" class="form-control" placeholder="Adrema"></input>
                </div>
                <div class="form-group">
                    (*) Inspector/Usuario:
                    <input name="inspuser" class="form-control" placeholder="Inspector/Usuario" required autofocus></input>
                </div>
                <div class="form-group">
                    Informe de Inspección número:
                    <input name="informeinspnum" class="form-control" placeholder="Informe Número"></input>
                </div>
                {{!-- <div class="form-group">
                    Número de Expediente:
                    <input name="numexp" class="form-control" placeholder="Nº de Expediente"></input>
                </div> --}}
                <div class="form-group">
                    (*) Fecha Entrada a Inspección
                    <input name="fechaentradinspec" class="form-control" placeholder="fecha Entrada Inspección"
                        type="date" required autofocus></input>
                </div>
                {{!-- <div class="form-group">
                    Fecha de Inspección:
                    <input name="inspecfecha" class="form-control" placeholder="fecha de Inspección"
                        type="date"></input>
                </div> --}}
                <div class="form-group">
                    (*) Inspector (Apellido y Nombre)
                    <input name="inspector" class="form-control" placeholder="Inspector"></input>
                </div>

                <div class="form-group">
                    Intimación Número:
                    <input name="intimacion" class="form-control" placeholder="Intimación Número" disabled></input>
                </div>
                <div class="form-group">
                    Infracción Número:
                    <input name="infraccion" class="form-control" placeholder="Intimación Número" disabled></input>
                </div>
                <div class="form-group">
                    (*) Observaciones:
                    <textarea name="observacion" class="form-control" placeholder="Observaciones"></textarea>
                </div>
                {{!-- <div class="form-group">
                    Pase a número de destino:
                    <input name="paseanumdestino" class="form-control" placeholder="Pase a número de destino"></input>
                </div> --}}
                <div class="form-group">
                    Pase a:
                    <input name="pasea" class="form-control" placeholder="Pase a número de destino"></input>
                </div>
                <div class="form-group">
                    Fecha de Pase a:
                    <input name="fechapasea" class="form-control" placeholder="Pase a número de destino"></input>
                </div>

                <label style="font-weight:bold">Seleccione Fotos Inspección: (Máximo 8):</label>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroupFile02"
                            accept=".jpg,.png" multiple>
                        <label class="custom-file-label" for="inputGroupFile02"
                            aria-describedby="inputGroupFileAddon02">Selecciones Foto</label>
                    </div>
                </div>
                {{!--
        </div>
        <input type="file" src="" name="image" id="fotoinspeccion" width="40" height="40"></input>
    </div> --}}
