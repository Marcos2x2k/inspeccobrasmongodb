<div class="row">
  <div class="form-group btn-center mx-auto">
    <form action="/expedientes/coordinados/findestado" method="POST">
      <input type="search" class="form-control" name="estado" placeholder="Buscar x Estado..." autofocus />
      <div class="form-group">
        <button class="btn btn-warning btn-block btn-sm" type="submit">
          Buscar Estado
        </button>
      </div>
    </form>
  </div>
  <div class="form-group btn-center mx-auto">
    <form action="/expedientes/coordinados/find" method="POST">
      <input type="search" class="form-control" name="numexpediente" placeholder="Buscar x Expediente..." autofocus />
      <div class="form-group">
        <button class="btn btn-warning btn-block btn-sm" type="submit">
          Buscar Expediente
        </button>
      </div>
    </form>
  </div>
  <div class="form-group btn-center mx-auto">
    <form action="/expedientes/coordinados/findadrema" method="POST">
      <input type="search" class="form-control" name="adremaexp" placeholder="Buscar x Adrema..." autofocus />
      <div class="form-group">
        <button class="btn btn-warning btn-block btn-sm" type="submit">
          Buscar Adrema
        </button>
      </div>
    </form>
  </div>
  <div class="form-group btn-center mx-auto">
    <form action="/expedientes/coordinados/findiniciador" method="POST">
      <input type="search" class="form-control" name="iniciadornomyape" placeholder="Buscar x Iniciador..." autofocus />
      <div class="form-group">
        <button class="btn btn-warning btn-block btn-sm" type="submit">
          Buscar Iniciador
        </button>
      </div>
    </form>
  </div>
  <a href="/expedientes/coordinados/intimacionesvencidas" class="btn btn-outline-warning btn-block btn-sm">Recargar Listado Completo</a>
  <a href="/expedientes/coordinados" class="btn btn-outline-success btn-block btn-sm">Volver Expedientes Coordinados</a>
  {{!-- <br /> --}}
  <div class="form-group btn-center mx-auto">
    <br />
    <h5 style="color:rgb(219, 216, 16); text-shadow: 2px 2px 4px #000000;">
      LISTADO DE INTIMACIONES YA VENCIDAS</h5>
    <br /><br />
    <div class="form-group btn-center mx-auto">
      <table class="table table-dark table-hover">
        <thead>
          <tr id="cabezeralistado" style="background-color: rgb(221, 157, 18);;text-shadow: 1px 1px 2px black">
            <td>Estado</td>
            <td>NÂº Expediente</td>
            <td>Adrema</td>
            <td>Codigo-Insp</td>
            <td>Iniciador (N y A)</td>
            <td>Domicilio</td>
            <td>Estado</td>
            <td>Venc.Intim.</td>
            <td>Opciones</td>            
          </tr>
        </thead>
        <tbody>
          {{#each expedcoordresultado}}
          <tr>
            {{!-- <td>{{ _id }}</td> --}}
            <td style="color:yellow;">{{ estado }}</td>
            <td>{{ numexpediente }}</td>
            <td>{{ adremaexp }}</td>
            <td>{{codigoinspector}}</td>
            <td style="text-transform: capitalize;">{{ iniciadornomyape }}</td>
            <td style="text-transform: capitalize;">{{ domicilio }}</td>
            <td>{{ estado }}</td>
            <td>{{ vencimientointimacion }}</td>            
            <td>              
              <a class="dropdown-item " href="/expedcoordin/edit/{{_id}}"
                style="color:rgb(165, 196, 28);font-weight: bold;text-shadow: 1px 1px 2px black;">
                Edit Vencimiento
              </a>
              <form onSubmit="return confirm('Desea enviar Papelera?')" style=""
                action="/expedcoordin/marcadelete/{{_id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <button class="btn btn-danger btn-block btn-sm" type="submit">
                  Borrar
                </button>
              </form>
            </td>
          </tr>
          </tr>
          {{else}}
          <script>
            document.getElementById('cabezeralistado').style.display = "none";
          </script>
          <div class="mx-auto">
            <div class="card mx-auto">
              <div class="card-body">
                <p style="color:red; font-weight: bold;"> No se Encontraron Movimientos de Intimaciones Vencidas!
                </p>
              </div>
            </div>
          </div>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
{{!-- {{else}} --}}