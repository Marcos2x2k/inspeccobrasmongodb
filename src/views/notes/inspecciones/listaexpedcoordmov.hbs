<div class="row">
    <div class="form-group btn-center mx-auto">
        <form action="/expedientes/coordinados/findestado" method="POST">
            <input type="search" class="form-control" name="estado" placeholder="Buscar x Estado..." autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Estado
                </button>
            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/expedientes/coordinados/find" method="POST">
            <input type="search" class="form-control" name="numexpediente" placeholder="Buscar x Expediente..."
                autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Expediente
                </button>
            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/expedientes/coordinados/findadrema" method="POST">
            <input type="search" class="form-control" name="adremaexp" placeholder="Buscar x Adrema..." autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Adrema
                </button>
            </div>
        </form>
    </div>
    <div class="form-group btn-center mx-auto">
        <form action="/expedientes/coordinados/findiniciador" method="POST">
            <input type="search" class="form-control" name="iniciadornomyape" placeholder="Buscar x Iniciador..."
                autofocus />
            <div class="form-group">
                <button class="btn btn-warning btn-block btn-sm" type="submit">
                    Buscar Iniciador
                </button>
            </div>
        </form>
    </div>

    <div class="form-group btn-center mx-auto">
        <br />
        <div style="padding: 0%; width: 100%; display: flex; justify-content: center;">            
            <div class="form-group btn-center mx-auto">
                <h6 style="color:black;text-decoration-line: underline;">Número Expediente</h6>
                <h5 style="color:yellow; font-size: medium">{{ expedcoordinado.numexpediente }}</h5>
            </div>
            <p>-----</p>
            <div class="form-group btn-center mx-auto">
                <h6 style="color:black;text-decoration-line: underline;">Número de Adrema</h6>
                <h5 style="color:yellow; font-size: medium">{{ expedcoordinado.adremaexp }}</h5>
            </div>
            <p>-----</p>
            <div class="form-group btn-center mx-auto">
                <h6 style="color:black;text-decoration-line: underline;">Iniciador de Expediente</h6>
                <h5 style="color:yellow; font-size: medium">{{ expedcoordinado.iniciadornomyape }}</h5>
            </div>   
            <p>-----</p>         
            <div class="form-group btn-center mx-auto">
                <h6 style="color:black;text-decoration-line: underline;">Dirección N°:</h6>
                <h5 style="color:yellow; font-size: medium">{{ expedcoordinado.domicilio }}</h5>
            </div>
        </div>
        <br />
        <h5 style="color:rgb(219, 216, 16); text-shadow: 2px 2px 4px #000000;">
            Lista Movimientos de Expedientes Coordinados</h5>
        <br /><br />
        <div class="form-group btn-center mx-auto">
            <table class="table table-dark table-hover">
                <thead>
                    <tr style="background-color: rgb(221, 157, 18);;text-shadow: 1px 1px 2px black">
                        <td>Estado</td>
                        <td>Cod-Insp</td>
                        <td>Inspector</td>
                        <td>Resultado</td>
                        <td>FechaInfracción</td>
                        <td>FechaIntimación</td>                        
                        <td style="color:red;">Opciones</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each expedcoordresultado}}
                    <tr>
                        {{!-- <td>{{ _id }}</td> --}}
                        <td style="color:yellow;">{{ estado }}</td>
                        <td>{{codigoinspector}}</td>
                        <td style="text-transform: capitalize;" >{{inspector}}</td>
                        <td>{{ resultadoinspeccion }}</td>
                        <td>{{ fechainfraccion }}</td>
                        <td>{{ fechaintimacion }}</td>
                        <td>
                            <a class="dropdown-item " href="/expedcoordinmov/info/{{_id}}"
                                style="color:rgb(24, 211, 33);font-weight: bold;text-shadow: 1px 1px 2px black;">
                                Info Movimientos
                            </a>
                            <a class="dropdown-item " href="/expedcoordinmov/edit/{{_id}}"
                                style="color:rgb(165, 196, 28);font-weight: bold;text-shadow: 1px 1px 2px black;">
                                Edit Movimientos
                            </a>
                            <form onSubmit="return confirm('Desea enviar Papelera?')" style=""
                                action="/expedcoordinmov/marcadelete/{{_id}}?_method=PUT" method="POST">
                                <input type="hidden" name="_method" value="PUT">
                                <button class="btn btn-danger btn-block btn-sm" type="submit">
                                    Borrar
                                </button>
                            </form>
                        </td>
                    </tr>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="form-group">
                <a href="javascript:window.history.back();" style="color:blue; font-weight: bold;">
                    &laquo; Volver Atrás
                </a>
            </div>
        </div>
    </div>
</div>
{{!-- {{else}} --}}