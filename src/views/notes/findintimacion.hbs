<div class="row">
    <a href="/intimaciones/" class="btn btn-success btn-block">Volver a todas las Intimaciones!</a>
    <br/><br/>
    {{#each intimacions}}    
       <div class="text-dark col-md-3">
        <br/>
            <div class="card">
                
                <div class="card-body">
                    <h3 class="text-dark display-5 card-title d-flex justify-content-between align-items-center">Boleta Intimación:</h3>
                    <h5 class="text-secondary display-5 card-title d-flex justify-content-between align-items-center">                        
                        <p style="color:brown; font-style:oblique; font-weight: bold;">{{ boletaintnum }}</p>
                    </h5>
                    <h3 class="text-dark display-5 card-title d-flex justify-content-between align-items-center">Expediente:</h3>
                    <p>{{ numexpedienteint }}</p>

                    <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/intimaciones/edit/{{_id}}"><i class="fas fa-edit" style='font-size:24px;color:rgb(98, 98, 100)'></i></a> Editar </p>
                    
                    <p style="color:brown; font-style:oblique; font-weight: bold;"><a href="/intimaciones/list/{{_id}}"><i class="fas fa-list" style='font-size:24px;color:blue'></i></a> Info Completa</p>     
                    <form style="box-shadow: 3px 4px;" action="/intimaciones/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                         Borrar
                        </button>                        
                    </form>                    
                </div>
            </div>
        </div>
        {{else}}
        <div class="mx-auto">
            <br/> <br/>
    <div class="card mx-auto">        
      <div class="card-body">        
        <p class"lead" style="color:red; font-weight: bold;"> No existe el Dato Buscado...</p>
        {{!-- <a href="/notes/add" class="btn btn-success btn-block">Cargar Inspección!</a> --}}
      </div>
    </div>
    </div>
    {{/each}}
</div>