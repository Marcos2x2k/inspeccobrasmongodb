<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="car-header mx-auto">
            <br />
            <h3 style="color:blue; text-decoration:underline; font-weight: bold;">Nueva Intimación {{user.name}}</h3>
            
        </div>
        <div class="card-body">
            <p style="color:red">(*) Obligatorio</p>
            <form action="/notes/newintimaciones" method="POST" enctype="multipart/form-data">
                <div class="form-group">                    
                    (*) Nº Intimación:
                    <input type="text" name="boletaintnum" class="form-control" placeholder="Num. Intimacion" required
                        autofocus>
                </div>
                <div class="form-group">
                    Expediente:
                    <input type="text" name="numexpedienteint" class="form-control" placeholder="Numº Expediente"
                        value="{{intimacion.numexpedienteint}}" autofocus>
                </div>
                <div class="form-group">
                    Adrema:
                    <input value="{{intimacion.adremaint}}" name="adremaint" class="form-control" placeholder="Adrema"
                    >
                </div>
                <div class="form-group">
                    (*) Señor / Señora:
                    <input name="senorsenora" class="form-control" placeholder="Señor / Señora" required
                        value="{{intimacion.senorsenora}}" autofocus></input>
                </div>
                <div class="form-group">
                    (*) Domicilio Particular:
                    <input name="domiciliopart" class="form-control" placeholder="Domicilio Particular" required
                        value="{{intimacion.domiciliopart}}" autofocus></input>
                </div>
                <div class="form-group">
                    (*) Lugar de Actuación:
                    <input name="lugaractuacion" class="form-control" placeholder="Lugar de Actuación" required
                        value="{{intimacion.lugaractuacion}}" autofocus></input>
                </div>
                <div class="form-group">
                    (*) Fecha de Intimación:
                    <input name="fechaintimacion" class="form-control" placeholder="Fecha de Intimación" type="date"
                        required autofocus></input>
                </div>
                <div class="form-group">
                    (*) Hora de Intimación:
                    <input type="time" name="horaintimacion" class="form-control" placeholder="Hora de Intimación"
                        required autofocus></input>
                </div>
                <div class="form-group">
                    (*) Otorga el Plazo de(Días):
                    <input type="number" name="otorgaplazode" class="form-control"
                        placeholder="Otorga el Plazo de (Días)" required autofocus></input>
                </div>
                <div class="form-group">
                    Para el Cumplimiento a (Observaciones):
                    <textarea style="resize:none;" name="paracumplimientoa" rows="2" cols="40" class="form-control" placeholder="Para el Cumplimiento a"
                        type="text"></textarea>
                </div>
                <div class="form-group">
                    vencimiento de intimación:
                    <input name="vencimientoint" class="form-control" placeholder="vencimiento de intimación"
                        type="date" disabled></input>
                </div>
                <div class="form-group">
                    (*) Notificado (Infractor NyA):
                    <input name="notificadoint" class="form-control" placeholder="Notificado" 
                        value="{{intimacion.notificadoint}}" required autofocus></input>
                </div>
                <div class="form-group">
                    (*) Aclaración Infractor (N y A):
                    <input value="{{intimacion.aclaracion}}" name="aclaracion" class="form-control" placeholder="Aclaración" required 
                    required autofocus></input>
                </div>
                <div class="form-group">
                    (*) Agente/Inspector:
                    <input name="inspectorint" class="form-control" placeholder="Inspector" required autofocus></input>
                </div>
                <div class="form-group">
                    (*) Nº Código Agente/Inspector:
                    <input name="numcodigoint" class="form-control" placeholder="Num. Codigo" required
                        autofocus></input>
                </div>
                <label style="font-weight:bold">Seleccione Fotos Intimación (Máximo 8):</label>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroupFile02"
                            accept=".jpg,.png" multiple>
                        <label class="custom-file-label" for="inputGroupFile02"
                            aria-describedby="inputGroupFileAddon02">Selecciones Foto</label>
                    </div>
                </div>
                {{!-- <div class="form-group">
                    foto Intimación:
                    <input type="file" src="" name="fotoint" width="40" height="40" disabled></input>
                </div> --}}
                {{!-- <div class="form-group">
                    Usuario Actual:
                    <input type="text" src="{{users.name}}" name="user" placeholder="" width="40" height="40"
                        disabled></input>
                </div> --}}

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Grabar
                    </button>
                </div>
                <div class="form-group">
                    <p style="color:blue; font-style:oblique; font-weight: bold;">
                        <a href="/intimaciones"><i class="fas fa-list" style='font-size:24px;color:black'></i>
                        </a> Volver
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>