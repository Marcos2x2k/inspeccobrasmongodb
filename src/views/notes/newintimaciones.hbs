<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="car-header mx-auto">
            <h3 style="color:blue; text-decoration:underline">Nueva Intimación {{user.name}}</h3>
        </div>
        <div class="card-body">
            <form action="/notes/newintimaciones" method="POST">  
            <div class="form-group">  
                    Nº Intimación:                 
                    <input type="text" name="boletaintnum" class="form-control" 
                    placeholder="Num. Intimacion" autofocus>                    
                </div>              
                <div class="form-group">  
                    Expediente:                 
                    <input type="text" name="numexpedienteint" class="form-control" 
                    placeholder="Numº Expediente" autofocus>                    
                </div>
                <div class="form-group">
                    Adrema:
                    <input name="adremaint" class="form-control"
                    placeholder="Adrema" ></input>
                </div>
                <div class="form-group" >  
                    Señor/Señora:                  
                    <input type="text" name="señorseñora" class="form-control"
                    placeholder="Señor/Señora" ></input>
                </div>
                <div class="form-group">
                    Domicilio Particular:
                    <input name="domiciliopart" class="form-control"
                    placeholder="Domicilio Particular" ></input>
                </div>
                <div class="form-group">
                    Lugar de Actuación:
                    <input name="lugaractuacion" class="form-control"
                    placeholder="Lugar de Actuación" ></input>
                </div>
                <div class="form-group">
                    Otorga el Plazo de(Horas):
                    <input name="otorgaplazode" class="form-control"
                    placeholder="Otorga el Plazo de (Horas)" ></input>
                </div>
                <div class="form-group">
                    Para el Cumplimiento a:
                    <textarea name="paracumplimientoa" class="form-control"
                    placeholder="Para el Cumplimiento a" type="text"></textarea>
                </div> 
                <div class="form-group">
                    Fecha de Intimación:
                    <input name="fechaintimacion" class="form-control"
                    placeholder="Fecha de Intimación" type="date"></input>
                </div> 
                <div class="form-group">
                    Hora de Intimación:
                    <input name="horaintimacion" class="form-control"
                    placeholder="Hora de Intimación"></input>
                </div>                 
                <div class="form-group">
                    vencimiento de intimación:
                    <input name="vencimientoint" class="form-control"
                    placeholder="vencimiento de intimación" type="date"></input>
                </div>  
                <div class="form-group">
                    Notificado (Infractor NyA):
                    <input name="notificadoint" class="form-control"
                    placeholder="Notificado"></input>
                </div>
                <div class="form-group">
                    Aclaración Infractor (N y A):
                    <input name="aclaracion" class="form-control"
                    placeholder="Aclaración"></input>
                </div>   
                <div class="form-group">
                    Agente/Inspector:
                    <input name="inspectorint" class="form-control"
                    placeholder="Inspector"></input>
                </div>                              
                <div class="form-group">
                    Nº Código Agente/Inspector:
                    <input name="numcodigoint" class="form-control"
                    placeholder="Num. Codigo" ></input>
                </div>
                <div class="form-group">
                    foto Intimación:
                    <input type="file" src="" 
                    name="fotoint"
                    width="40" height="40" disabled></input>
                </div>   
                {{!-- <div class="form-group">
                    Usuario Actual:
                    <input type="text" src="{{users.name}}" 
                    name="user" placeholder=""
                    width="40" height="40" disabled></input>
                </div>               --}}
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>                    
                </div>
                <div class="form-group">
                    <p style="color:blue; font-style:oblique; font-weight: bold;"><a href="/intimaciones"><i class="fas fa-list" style='font-size:24px;color:black'></i></a> Volver</p> 
                </div>
            </form>
        </div>
    </div>
</div>
